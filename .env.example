# runtime environment; DEV, TEST, STAGING, PROD
ENVIRONMENT=DEV

# microservice version
VERSION=1.0.0

# compilation options
GOOS=AppleSilicon
GOARCH=arm64
GOOS=darwin

# the port the microservice runs on
PORT=9300

# postgres db details
POSTGRES_HOST=pdb
POSTGRES_USERNAME=poptape_admin
POSTGRES_PASSWORD=SUPERSECRETPASSWORD
POSTGRES_DBNAME=poptape_admin
POSTGRES_PORT=5432

# mongo db details
MONGO_HOST=mdb
MONGO_DBNAME=poptape_backups
MONGO_USERNAME=poptape_admin
MONGO_PASSWORD=ANOTHERSUPERSECRETPASSWORD
MONGO_PORT=27017

# main admin user of the microservice - password here should be base64 encoded
SUPERUSER=admin
SUPERPASS=SECRETADMINPASSWORD

# the secret key and nonce for encrypting/decrypting data in db
SUPERSECRETKEY=a32bytesupersecretkey23456789012
SUPERSECRETNONCE=a12bytenonce

# jwt token stuff
# lifespan in minutes
TOKEN_LIFESPAN=15
# this is generated on *nix machines using 'openssl rand -hex 32'
TOKEN_SECRET=15a181377b20f5412a27fcfdc9499e16929befc113242288953fe27c7d6fa834

# logging stuff
LOGFILE=poptape_admin.log
LOGLEVEL=debug
LOCAL_LOG_LOC=/path/to/host/log/directory